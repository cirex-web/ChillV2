{
  "name": "Chill - Browse With Purpose",
  "description": "An extension that helps reduce impulsive browsing by forcing users to stop and consider before gaining access to a webpage.",
  "version": "1.0.0",
  "manifest_version": 2,
  "background": {
    "scripts": ["backend/scripts/background.js"],
    "persistent": false
  },
  "permissions": ["activeTab", "storage"],
  "browser_action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "js": ["external/jquery.js", "backend/scripts/page-script.js"],
      "matches": ["http://*/*", "https://*/*"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": ["*"]
}
